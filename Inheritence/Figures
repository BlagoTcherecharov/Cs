using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp4
{
    class Point
    {
        protected int x1, y1, x2, y2;

        public Point()
        {
            x1 = y1 = x2 = y2 = 0;
        }

        public virtual void Input()
        {
            Console.Write("Enter first x: ");
            x1 = int.Parse(Console.ReadLine());
            Console.Write("Enter first y: ");
            y1 = int.Parse(Console.ReadLine());
            Console.Write("Enter second x: ");
            x2 = int.Parse(Console.ReadLine());
            Console.Write("Enter second y: ");
            y2 = int.Parse(Console.ReadLine());
        }


    }

    class Square : Point
    {
        private int side;

        public Square() : base()
        {
            side = 0;
        }

        public override void Input()
        {
            Console.Write("Enter first x: ");
            x1 = int.Parse(Console.ReadLine());
            Console.Write("Enter second x: ");
            x2 = int.Parse(Console.ReadLine());
        }

        public void Surface()
        {
            side = Math.Abs(x2 - x1);
            Console.WriteLine("Surface of square is " + side * side);
        }
    }

    class Rectangle : Point
    {
        private int side1, side2;

        public Rectangle() : base()
        {
            side1 = side2 = 0;
        }

        public void Surface()
        {
            side1 = Math.Abs(x2 - x1);
            side2 = Math.Abs(y2 - y1);
            Console.WriteLine("Surface of rectangle is " + side1 * side2);
        }
    }

    class Rhombus : Point
    {
        private int b, h;

        public Rhombus() : base()
        {
            b = h = 0;
        }

        public void Surface()
        {
            b = Math.Abs(x2 - x1)*2;
            h = Math.Abs(y2 - y1)*2;
            Console.WriteLine("Surface of rhombus is " + b * h);
        }
    }

    class Parallelogram : Point
    {
        private int b, h;

        public Parallelogram() : base()
        {
            b = h = 0;
        }

        public void Surface()
        {
            b = Math.Abs(x2 - x1);
            h = Math.Abs(y2 - y1);
            Console.WriteLine("Surface of parallelogram is " + b * h);
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Square square = new Square();
            Rectangle rectangle = new Rectangle();
            Rhombus rhombus = new Rhombus();
            Parallelogram parallelogram = new Parallelogram();

            Console.WriteLine("Square: ");
            square.Input();
            square.Surface();
            Console.WriteLine("Rectangle: ");
            rectangle.Input();
            rectangle.Surface();
            Console.WriteLine("Rhombus: ");
            rhombus.Input();
            rhombus.Surface();
            Console.WriteLine("Parallelogram: ");
            parallelogram.Input();
            parallelogram.Surface();
        }
    }
}
